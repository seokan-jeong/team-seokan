{
  "hooks": {
    "SubagentStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "HOOK_EVENT=SubagentStart ${CLAUDE_PLUGIN_ROOT}/hooks/send-event.sh",
            "async": true,
            "timeout": 5
          }
        ]
      }
    ],
    "SubagentStop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "HOOK_EVENT=SubagentStop ${CLAUDE_PLUGIN_ROOT}/hooks/send-event.sh",
            "async": true,
            "timeout": 5
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Task",
        "hooks": [
          {
            "type": "command",
            "command": "HOOK_EVENT=PostToolUse ${CLAUDE_PLUGIN_ROOT}/hooks/send-event.sh",
            "async": true,
            "timeout": 5
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "HOOK_EVENT=UserPromptSubmit ${CLAUDE_PLUGIN_ROOT}/hooks/send-event.sh",
            "async": true,
            "timeout": 5
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "HOOK_EVENT=Stop ${CLAUDE_PLUGIN_ROOT}/hooks/send-event.sh",
            "async": true,
            "timeout": 5
          }
        ]
      }
    ],
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "HOOK_EVENT=SessionStart ${CLAUDE_PLUGIN_ROOT}/hooks/send-event.sh",
            "async": true,
            "timeout": 5
          }
        ]
      }
    ],
    "SessionEnd": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "HOOK_EVENT=SessionEnd ${CLAUDE_PLUGIN_ROOT}/hooks/send-event.sh",
            "async": true,
            "timeout": 5
          }
        ]
      }
    ]
  }
}
